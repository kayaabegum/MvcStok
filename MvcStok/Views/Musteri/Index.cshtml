@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<h2>Müşteri Listesi</h2>

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <h4>
        <p>
            <b>Aranacak müşteri adı: </b> @Html.TextBox("p")
            <input type="submit" value="Ara" />
        </p>

    </h4>

}

<table class="table table-bordered">
    <tr>

        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>

    </tr>
    <tbody>
        @foreach (var mst in Model)
        {
            <tr>
                <th>@mst.MUSTERIID</th>
                <td>@mst.MUSTERIAD</td>
                <td>@mst.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mst.MUSTERIID" class="btn btn-danger ">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mst.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id = mst.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek istediğinize emin misiniz? Bu işlem geri alınamaz.')" })</td>

            </tr>
        }
    </tbody>





</table>

<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

